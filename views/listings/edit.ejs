<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Edit your listing</h3>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="title" value="<%= listing.title %>" required class="form-control">         
        </div>

        <div class="mb-3">
            <label for="author" class="form-label"><strong>Author:</strong></label>
            <input type="text" id="author" name="author" value="<%= listing.author %>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="description" class="form-label"><strong>Description:</strong></label>
            <textarea id="description" name="description" required class="form-control"><%= listing.description %></textarea>
        </div>

        <div class="mb-3">
            <label for="category" class="form-label"><strong>Category:</strong></label>
            <input type="text" id="category" name="category" value="<%= listing.category %>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="publisher" class="form-label"><strong>Publisher:</strong></label>
            <input type="text" id="publisher" name="publisher" value="<%= listing.publisher %>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="publication_year" class="form-label"><strong>Publication Year:</strong></label>
            <input type="number" id="publication_year" name="publication_year" value="<%= listing.publication_year %>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="stock" class="form-label"><strong>Stock:</strong></label>
            <input type="number" id="stock" name="stock" value="<%= listing.stock %>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="language" class="form-label"><strong>Language:</strong></label>
            <input type="text" id="language" name="language" value="<%= listing.language %>" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="price" class="form-label"><strong>Price (â‚¹):</strong></label>
            <input type="number" id="price" name="price" value="<%= listing.price %>" step="0.01" required class="form-control">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label"><strong>Image URL:</strong></label>
            <input type="url" id="image" name="image" value="<%= listing.image %>" required class="form-control">
        </div>

        <button type="submit" class="btn btn-primary edit-btn">Edit</button>
    </form>
     
</div>
</div>
